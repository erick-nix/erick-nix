---
import FlexContainer from "./FlexContainer.astro";
import Text from "./Text.astro";

export interface Props {
  title: string;
  date: string;
}

const { title, date } = Astro.props;
---

<FlexContainer clickable direction="column" gap="14px" class="postItem">
  <div class="imagePostItem"></div>
  <FlexContainer direction="column" gap="8px">
    <Text as="h2" size="sm" color="var(--md-sys-color-on-surface)" weight={400}>
      {title}
    </Text>
    <Text as="p" size="xs" color="var(--md-sys-color-outline)" weight={300}>
      {date}
    </Text>
  </FlexContainer>
</FlexContainer>

<style is:global>
  .postItem {
    width: 270px;
  }

  .imagePostItem {
    width: 100%;
    height: 150px;
	background-color: color-mix(in srgb, var(--md-sys-color-primary) 8%, transparent);
    border-radius: 8px;
  }
</style>